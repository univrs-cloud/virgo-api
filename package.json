{
	"name": "virgo-api",
	"version": "2.1.3",
	"description": "virgo API",
	"main": "server.js",
	"scripts": {
		"deb": "node-deb --no-default-package-dependencies --no-rebuild --install-strategy copy -- server.js config.js cert/ routes/ services/ emitters/",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"node_deb": {
		"architecture": "arm64",
		"init": "systemd",
		"install_dir": "/var/www",
		"dependencies": "apt-show-versions,smartmontools,nvme-cli,jq,msmtp-mta,bsd-mailx,redis-server",
		"user": "root",
		"templates": {
			"preinst": "templates/preinstall",
			"postinst": "templates/postinstall",
			"systemd_service": "templates/systemd.service"
		},
		"entrypoints": {
			"daemon": "server.js"
		}
	},
	"engines": {
		"node": ">=22.11.0",
		"npm": ">=10.9.0"
	},
	"dependencies": {
		"axios": "^1.8.4",
		"bcryptjs": "^3.0.2",
		"body-parser": "^2.2.0",
		"bullmq": "^5.49.2",
		"camelcase-keys": "^9.1.3",
		"check-disk-space": "^3.4.0",
		"docker-compose": "^1.2.0",
		"dockerode": "^4.0.6",
		"express": "^5.1.0",
		"express-rate-limit": "^7.5.0",
		"express-validator": "^7.2.1",
		"ini": "^5.0.0",
		"js-yaml": "^4.1.0",
		"kelvin-to-celsius": "^1.1.0",
		"linux-sys-user": "^1.2.0",
		"path": "^0.12.7",
		"socket.io": "^4.8.1",
		"systeminformation": "^5.25.11",
		"touch": "^3.1.1"
	},
	"optionalDependencies": {
		"raspi": "^6.0.1",
		"raspi-i2c": "^6.2.4"
	},
	"author": "univrs",
	"license": "UNLICENSED"
}
