{
	"name": "virgo-api",
	"version": "2.7.0",
	"description": "virgo API",
	"author": "univrs",
	"license": "UNLICENSED",
	"main": "index.js",
	"scripts": {
		"deb": "node-deb --no-default-package-dependencies --no-rebuild --install-strategy copy -- index.js config.js cert/ src/",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"node_deb": {
		"architecture": "arm64",
		"init": "systemd",
		"install_dir": "/var/www",
		"dependencies": "apt-show-versions,smartmontools,nvme-cli,jq,msmtp-mta,bsd-mailx,redis-server",
		"user": "root",
		"templates": {
			"preinst": "templates/preinstall",
			"postinst": "templates/postinstall",
			"systemd_service": "templates/systemd.service"
		},
		"entrypoints": {
			"daemon": "index.js"
		}
	},
	"engines": {
		"node": ">=22.20.0",
		"npm": ">=10.9.3"
	},
	"dependencies": {
		"bcryptjs": "^3.0.2",
		"bullmq": "^5.61.0",
		"camelcase-keys": "^10.0.0",
		"change-case": "^5.4.4",
		"check-disk-space": "^3.4.0",
		"chokidar": "^4.0.3",
		"docker-compose": "^1.3.0",
		"dockerode": "^4.0.9",
		"execa": "^9.6.0",
		"express": "^5.1.0",
		"express-rate-limit": "^8.1.0",
		"express-validator": "^7.2.1",
		"ini": "^5.0.0",
		"js-yaml": "^4.1.0",
		"kelvin-to-celsius": "^1.1.0",
		"linux-sys-user": "^1.2.0",
		"path": "^0.12.7",
		"sequelize": "^6.37.7",
		"socket.io": "^4.8.1",
		"sqlite3": "^5.1.7",
		"systeminformation": "^5.27.11",
		"touch": "^3.1.1"
	},
	"optionalDependencies": {
		"raspi": "^6.0.1",
		"raspi-i2c": "^6.2.4"
	},
	"devDependencies": {
		"@types/node": "^24.8.1",
		"node-deb": "^0.10.7"
	},
	"overrides": {
		"glob": "^11.0.3",
		"node-gyp": "^11.4.2"
	}
}
