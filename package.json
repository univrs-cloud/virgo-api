{
	"name": "virgo-api",
	"version": "1.2.1",
	"description": "virgo API",
	"main": "server.js",
	"scripts": {
		"deb": "node-deb --no-default-package-dependencies --no-rebuild --install-strategy copy -- server.js config.js cert/ routes/ services/ emitters/",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"node_deb": {
		"init": "systemd",
		"install_dir": "/var/www",
		"dependencies": "zfsutils-linux,apt-show-versions,smartmontools,nvme-cli,jq",
		"user": "root",
		"templates": {
			"postinst": "templates/postinstall",
			"systemd_service": "templates/systemd.service"
		},
		"entrypoints": {
			"daemon": "server.js"
		}
	},
	"engines": {
		"node": ">=22.11.0",
		"npm": ">=10.9.0"
	},
	"dependencies": {
		"@univrs/zfs": "^1.0.5",
		"axios": "^1.7.9",
		"body-parser": "^1.20.3",
		"dockerode": "^4.0.4",
		"express": "^4.21.2",
		"express-rate-limit": "^7.5.0",
		"express-validator": "^7.2.1",
		"ini": "^5.0.0",
		"kelvin-to-celsius": "^1.1.0",
		"linux-sys-user": "^1.2.0",
		"path": "^0.12.7",
		"sequelize": "^6.37.5",
		"socket.io": "^4.8.1",
		"sqlite3": "^5.1.7",
		"systeminformation": "^5.25.11",
		"touch": "^3.1.1"
	},
	"optionalDependencies": {
		"raspi": "^6.0.1",
		"raspi-i2c": "^6.2.4"
	},
	"author": "univrs",
	"license": "UNLICENSED"
}
