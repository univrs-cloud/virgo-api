{
	"name": "virgo-api",
	"version": "2.10.18",
	"description": "virgo API",
	"author": "univrs",
	"license": "UNLICENSED",
	"main": "index.js",
	"scripts": {
		"deb": "node-deb --no-default-package-dependencies --no-rebuild --install-strategy copy -- index.js config.js cert/ src/",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"node_deb": {
		"architecture": "arm64",
		"init": "systemd",
		"install_dir": "/var/www",
		"dependencies": "apt-show-versions,smartmontools,nvme-cli,jq,msmtp-mta,bsd-mailx,redis-server",
		"user": "root",
		"templates": {
			"preinst": "templates/preinstall",
			"postinst": "templates/postinstall",
			"systemd_service": "templates/systemd.service"
		},
		"entrypoints": {
			"daemon": "index.js"
		}
	},
	"engines": {
		"node": ">=22.21.1",
		"npm": ">=10.9.3"
	},
	"type": "commonjs",
	"cpu": [
		"arm64"
	],
	"dependencies": {
		"bcryptjs": "^3.0.3",
		"bullmq": "^5.65.1",
		"camelcase-keys": "^10.0.1",
		"change-case": "^5.4.4",
		"check-disk-space": "^3.4.0",
		"chokidar": "^5.0.0",
		"compromise": "^14.14.4",
		"docker-compose": "^1.3.0",
		"dockerode": "^4.0.9",
		"execa": "^9.6.1",
		"express": "^5.2.1",
		"express-rate-limit": "^8.2.1",
		"express-validator": "^7.3.1",
		"ini": "^6.0.0",
		"js-yaml": "^4.1.1",
		"kelvin-to-celsius": "^1.1.0",
		"linux-sys-user": "^1.2.0",
		"path": "^0.12.7",
		"sequelize": "^6.37.7",
		"socket.io": "^4.8.1",
		"sqlite3": "^5.1.7",
		"systeminformation": "^5.27.11",
		"touch": "^3.1.1"
	},
	"optionalDependencies": {
		"bufferutil": "*",
		"raspi": "^6.0.1",
		"raspi-i2c": "^6.2.4",
		"utf-8-validate": "*"
	},
	"devDependencies": {
		"@types/node": "^24.10.1",
		"node-deb": "^0.10.7"
	},
	"overrides": {
		"glob": "^13.0.0",
		"node-gyp": "^12.1.0",
		"validator": "^13.15.23"
	}
}
